                crossorigin="")
        
    body
        if user.isAuthenticated
            h1(id='caption') Welcome #{user.name}
        ul 
            li: a(href='/', title='Home') Home
            //li: a(href='/private') User locations             
            if user.isAuthenticated
                li: form(action="/logout", method="get")
                    input(type="submit", value="Logout " + user.name)
            else
                li: a(href='/sign-up', title='Sign up') Sign up 

        br 
        p(id='status')
        p(id='location')

        div(id='map' style='height: 700px;')
        

    footer
        if !user.isAuthenticated
            script(src='/scripts/userLocation.js')
        else 
            script(src='/scripts/logUser.js')
            script(src='/scripts/userLocations.js')